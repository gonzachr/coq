Definition andb (b1: bool) (b2: bool) :=
  match b1 with
    | true => b2

    | false => false
  end.

Example andb_test: (andb false true) = false.
Proof.
  simpl.
  reflexivity.
Qed.

Check nat.
Check 1.

Check S.

Theorem successors: S(0 + S(0)) = 2.
Proof.
  simpl.
  reflexivity.
Qed.

Lemma everything_implies_itself:
  forall p: Prop, p -> p.
Proof.
  intros.
  assumption.
Qed.

Inductive bool: Set :=
| true
    | false.

Lemma incorrect_equality_implies_anything:
  forall a, false = true -> a.
Proof.
  intros.
  discriminate.
Qed.

Inductive even : nat -> Prop :=
| even_0: even 0
| even_S: forall n, even n -> even (S(S n)).

Lemma two_is_even:
  even (S (S 0)).
Proof.
  constructor.
  constructor.
Qed.
